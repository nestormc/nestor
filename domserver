import getopt
import os
import sys

from pydomserver import Domserver
from pydomserver.dbconfigdict import DOMSERVER_CONFIG_DEFAULTS
from pydomserver.utils import domserverRunning, remoteSetConfig
from pydomserver.helpers.amuledl import AmuleHelper
from pydomserver.helpers.bittorrent import BitTorrentHelper
from pydomserver.helpers.filemanager import FileManagerHelper
from pydomserver.helpers.medialibrary import MediaLibraryHelper
from pydomserver.helpers.systemactions import SystemActionsHelper

def usage():
    print """Usage:
    %s [options] [action [action-param ...]]
    
Options:
    -h, --help          print help and exit
    --main-db=<FILE>    use main sqlite database <FILE>
    --object-db=<FILE>  use object sqlite database <FILE>
    
Actions:
    printopts           prints options and exit
    setopt opt=val ...  set option(s) and exit
    status              get domserver running status
    stop                terminate domserver
    kill                kill domserver (use when 'stop' does not work)
""" % sys.argv[0]


def option_error(err):
    print err
    print " "
    usage()
    sys.exit(2)


def parse_options():
    try:
        opts, args = getopt.getopt(sys.argv[1:],
            "h", 
            ["help", "main-db=", "object-db="])
    except getopt.GetoptError, err:
        option_error(str(err))
        
    ret = {}
    ret['kwargs'] = {'daemonize':True}
    for o, a in opts:
        if o in ("-h", "--help"):
            usage()
            sys.exit()
        elif o in ("--main-db"):
            ret['kwargs']['main_db'] = a
        elif o in ("--object-db"):
            ret['kwargs']['obj_db'] = a
        else:
            assert False, "unhandled option !"
            
    if len(args):
        action = args[0]
        if action not in ('setopt', 'printopts', 'kill', 'stop', 'status'):
            option_error("Unknown action '%s'" % action)
        if action == 'setopt':
            if len(args) < 2:
                option_error("Missing parameters for setopt")
            ret['action_params'] = args[1:]
        ret['action'] = action
        
    return ret
    
    
def print_config(**kwargs):
    kwargs['daemonize'] = False
    kwargs['dry_run'] = True
    domserver = Domserver(**kwargs)
    found_keys = domserver.config.keys()
    print "Configured options:"
    for k in sorted(found_keys):
        print "  %s = %s" % (k, domserver.config[k])
    print " "
    print "Default options:"
    for k in sorted(DOMSERVER_CONFIG_DEFAULTS.keys()):
        if k not in found_keys:
            print "  %s = %s" % (k, DOMSERVER_CONFIG_DEFAULTS[k])
            
            
def set_config(config, **kwargs):
    kwargs['daemonize'] = False
    kwargs['dry_run'] = True
    domserver = Domserver(**kwargs)
    
    setconf = {}
    for c in config:
        try:
            key, val = c.split('=', 1)
        except ValueError:
            option_error("Malformed config option '%s'" % c)
        if key == 'version':
            print "Warning: changing the DB version number can seriously mess up things !"
            print "If you're sure, use the 'i_really_want_to_change_the_version_number' parameter."
            return
        if key == 'i_really_want_to_change_the_version_number':
            key = 'version'
        setconf[key] = val
    
    if domserverRunning(os.path.basename(sys.argv[0])):
        for k in setconf.keys():
            ret = remoteSetConfig(domserver, k, setconf[k])
            if ret:
                print "Setting %s to %s" % (k, setconf[k])
            else:
                print "Could not set %s to %s !" % (k, setconf[k])
    else:
        for k in setconf.keys():
            domserver.config[k] = setconf[k]
            print "Setting %s to %s" % (k, setconf[k])
            
            
def kill_domserver(kill = False):
    if not domserverRunning(os.path.basename(sys.argv[0])):
        print "domserver is not running !"
    else:
        pidfile = "/var/run/%s.pid" % os.path.basename(sys.argv[0])
        pidfd = open(pidfile, 'r')
        pid = int(pidfd.read())
        pidfd.close()
        import signal
        if kill:
            os.kill(pid, signal.SIGKILL)
        else:
            os.kill(pid, signal.SIGTERM)
        
    
def run_domserver():
    opt = parse_options()
    kwargs = opt['kwargs']
    # kwargs['daemonize'] = False
    
    if opt.has_key('action'):
        if opt['action'] == 'printopts':
            print_config(**kwargs)
        elif opt['action'] == 'setopt':
            set_config(opt['action_params'], **kwargs)
        elif opt['action'] == 'stop':
            kill_domserver()
        elif opt['action'] == 'kill':
            kill_domserver(True)
        elif opt['action'] == 'status':
            no = '' if domserverRunning(os.path.basename(sys.argv[0])) else 'not '
            print 'domserver is %srunning' % no
        sys.exit()
        
    if domserverRunning(os.path.basename(sys.argv[0])):
        print "domserver is already running !"
        sys.exit(2)
        
    
    domserver = Domserver(**kwargs)
    domserver.info("****************************************")
       
    domserver.add_helper(AmuleHelper)
    domserver.add_helper(BitTorrentHelper)
    domserver.add_helper(FileManagerHelper)
    domserver.add_helper(MediaLibraryHelper)
    domserver.add_helper(SystemActionsHelper)
    
    if int(domserver.config['domserver.use_psyco']):
        try:
            import psyco
            domserver.verbose("Enabling psyco...")
            psyco.full()
        except ImportError:
            domserver.info("Warning: psyco is enabled in config but not available")
        
    
    domserver.info("Starting domserver...")
    domserver.run()
    domserver.info("Stopped domserver")


if __name__ == '__main__':
    run_domserver()
    
