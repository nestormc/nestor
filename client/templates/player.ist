@behave behaviour
	#player
		.display
			a.active-icon.toggle-fullscreen[href=#!player/fullscreen]
				@svg "images/fullscreen.svg"

		@dom slider

		.metadata
			.title
			.subtitle

		.controls
			a.active-icon.prev[href=#!player/prev]
				@svg "images/prev.svg"
			a.active-icon.play[href=#!player/play]
				@svg "images/play.svg"
			a.active-icon.pause[href=#!player/pause][style=display: none;]
				@svg "images/pause.svg"
			a.active-icon.next[href=#!player/next]
				@svg "images/next.svg"
