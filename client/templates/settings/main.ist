@if panes.length === 0
	.pane.content-box
		.info
			.title "Nothing to see here :("

@each panes
	.pane.content-box
		.info
			.pane-icon
				@svg "images/" + icon + ".svg"
			.title "{{ title }}"
			.description "{{ description }}"

		.settings
			@if typeof view !== "undefined"
				@dom view
			@else
				@dom render()