@if panes.length === 0
	.pane.content-box
		.info
			.title "Nothing to see here :("

@each panes
	.pane.content-box
		@if typeof actions !== "undefined"
			.content-box-actions
				@each actions
					a.action-with-icon[href=#{{ route }}]
						@svg uri("images/%s.svg", icon)
						"{{ title }}"

		.content-box-header
			.pane-icon
				@svg uri("images/%s.svg", icon)
			.title "{{ title }}"
			.description "{{ description }}"

		.settings
			@dom view